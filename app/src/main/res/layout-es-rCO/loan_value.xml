<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="20dp"
    android:paddingHorizontal="24dp"
    android:background="@drawable/card_background">

    <TextView
        android:id="@+id/valueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor a solicitar"
        android:textSize="14sp"
        android:textColor="@color/woodsmoke_700"
        android:fontFamily="@font/sf_pro_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="16dp"
        />

    <TextView
        android:id="@+id/numberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$100,000.00"
        android:textSize="20sp"
        android:textColor="@color/Matisse_700"
        android:fontFamily="@font/sf_pro_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valueText"
        />

    <SeekBar
        android:id="@+id/sliderOne"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:progressTint="@color/Matisse_700"
        android:thumbTint="@color/web_orange_400"
        android:thumb="@drawable/thumb_size"
        android:splitTrack="false"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:progressDrawable="@drawable/seekbar_progress"
        app:layout_constraintTop_toBottomOf="@+id/numberText"/>

    <LinearLayout
        android:id="@+id/containerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/sliderOne"

        >
        <TextView
            android:id="@+id/minValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$100,000.00"
            android:textSize="12sp"
            android:textColor="@color/woodsmoke_500"
            android:layout_weight="1"
            android:gravity="start"
            />
        <TextView
            android:id="@+id/maxValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1,000,000.00"
            android:textSize="12sp"
            android:textColor="@color/woodsmoke_500"

            android:layout_weight="1"
            android:gravity="end"
            android:layout_marginBottom="16dp"
            />
    </LinearLayout>

    <!-- LÃ­nea divisoria -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/pale_sky_100"
        app:layout_constraintTop_toBottomOf="@id/containerText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plazo"
        android:textSize="16sp"
        android:textColor="@color/woodsmoke_700"
        android:fontFamily="@font/sf_pro_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/containerText"
        />
    <TextView
        android:id="@+id/deadlineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Cuota"
        android:textSize="20sp"
        android:textColor="@color/Matisse_700"
        android:fontFamily="@font/sf_pro_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deadline"
        />

    <SeekBar
        android:id="@+id/deadlineSeekbar"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:progressTint="@color/Matisse_700"
        android:thumbTint="@color/web_orange_400"
        android:thumb="@drawable/thumb_size"
        android:splitTrack="false"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:progressDrawable="@drawable/seekbar_progress"
        app:layout_constraintTop_toBottomOf="@+id/deadlineText"
        />
    <LinearLayout
        android:id="@+id/containerTextDeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/deadlineSeekbar"
        >
        <TextView
            android:id="@+id/minValueDeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 cuota"
            android:textSize="12sp"
            android:textColor="@color/woodsmoke_500"
            android:layout_weight="1"
            android:gravity="start"
            />
        <TextView
            android:id="@+id/maxValueDeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 cuotas"
            android:textSize="12sp"
            android:textColor="@color/woodsmoke_500"
            android:layout_weight="1"
            android:gravity="end"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>