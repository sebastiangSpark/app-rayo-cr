<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/pale_sky_100"
    app:cardCornerRadius="16dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="24dp"
        >
        <TextView
            android:id="@+id/title_info_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Intereses"
            android:textStyle="bold"
            android:textColor="@color/woodsmoke_700"
            />
        <TextView
            android:id="@+id/txt_info_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/woodsmoke_600"
            android:text="Es el índice utilizado para medir el costo de tu crédito. La tasa de interés cobrada por RAYO en todos tus créditos es del 24,92% E.A (Efectivo Anual)"
            android:layout_marginBottom="22dp"/>
        <TextView
            android:id="@+id/btn_close_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Matisse_700"
            android:text="Entendido"
            android:layout_gravity="end"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>