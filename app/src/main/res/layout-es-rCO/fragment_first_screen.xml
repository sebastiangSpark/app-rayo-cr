<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".ui.onboarding.screens.FirstScreen">

    <ImageView
        android:id="@+id/logo_onboarding"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_gravity="start"
        android:layout_margin="4dp"
        android:src="@drawable/logo_app"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_onboarding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_onboarding_img"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/decoration"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_onboarding"
        app:layout_constraintVertical_bias="0.023" />

    <LinearLayout
        android:id="@+id/container_onboarding_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_onboarding"
        app:layout_constraintVertical_bias="0.205">

        <TextView
            android:id="@+id/title_onboarding_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_title"
            android:textColor="@color/Matisse_900"
            android:textSize="@dimen/title_onboarding_text"
            android:fontFamily="@font/sf_pro_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/onboarding_text"
            android:textColor="@color/woodsmoke_600"
            android:textSize="15sp"
            android:fontFamily="@font/sf_pro_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_onboarding_text" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>