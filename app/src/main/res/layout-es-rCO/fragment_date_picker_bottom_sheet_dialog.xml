<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet_dialog"
    >
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:textSize="12sp"
        android:textColor="@color/woodsmoke_600"
        android:text="Fecha de nacimiento" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/woodsmoke_200"
        />
    <!-- Encabezado con Mes y Año -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:paddingHorizontal="14dp"
        android:gravity="center_vertical"
        >

        <!-- Controles para el Mes -->
        <ImageButton
            android:id="@+id/btnPrevMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@drawable/arrow_left"
            app:tint="@color/woodsmoke_800"
            android:background="?attr/selectableItemBackgroundBorderless"/>

<!--        <TextView
            android:id="@+id/txtMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Noviembre"
            android:textSize="14sp"
            android:padding="8dp"
            />-->
        <Spinner
            android:id="@+id/spinnerMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="14sp"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageButton
            android:id="@+id/btnNextMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right"
            android:padding="12dp"
            app:tint="@color/woodsmoke_800"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <!-- Espacio entre los controles de mes y año -->
        <View
            android:layout_width="16dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <!-- Controles para el Año -->
        <ImageButton
            android:id="@+id/btnPrevYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left"
            android:padding="12dp"
            app:tint="@color/woodsmoke_800"
            android:background="?attr/selectableItemBackgroundBorderless"/>

<!--        <TextView
            android:id="@+id/txtYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025"
            android:textSize="14sp"
            android:padding="8dp"
            />-->
        <Spinner
            android:id="@+id/spinnerYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:textSize="14sp"
            android:dropDownWidth="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            />

        <ImageButton
            android:id="@+id/btnNextYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right"
            app:tint="@color/woodsmoke_800"
            android:padding="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <!-- Días de la semana -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textColor="@color/Matisse_700"
            android:textSize="16sp"
            android:gravity="center"
            android:text="L"/>
        <TextView android:text="M"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:textColor="@color/Matisse_700"
            android:textSize="16sp"/>
        <TextView android:text="M"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:textColor="@color/Matisse_700"
            android:textSize="16sp"/>
        <TextView android:text="J"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:textColor="@color/Matisse_700"
            android:textSize="16sp"/>
        <TextView android:text="V"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:textColor="@color/Matisse_700"
            android:textSize="16sp"/>
        <TextView android:text="S"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:textColor="@color/Matisse_700"
            android:textSize="16sp"/>
        <TextView android:text="D"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:textColor="@color/Matisse_700"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- Días del mes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="7"
        android:padding="20dp"
        android:scrollbars="none"/>

    <!-- Botones de Acción -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="20dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:paddingHorizontal="41dp"
            android:textColor="@color/Matisse_700"
            android:backgroundTint="@android:color/transparent"
            android:text="Cancelar"/>

        <View
            android:layout_width="16dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="41dp"
            android:paddingVertical="12dp"
            android:textColor="@color/pale_sky_50"
            android:backgroundTint="@color/Matisse_700"
            android:text="Hecho"/>
    </LinearLayout>

</LinearLayout>