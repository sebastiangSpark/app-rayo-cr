<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:background="@drawable/card_background"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icon_exclamation"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_have_account"
        app:tint="@color/woodsmoke_700"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/title_dialog_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ya tienes una cuenta"
        android:fontFamily="@font/sf_pro_semibold"
        android:textColor="@color/woodsmoke_700"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/icon_exclamation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_dialog_bank"/>
    <TextView
        android:id="@+id/text_dialog_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Los datos de este usuario ya se encuentran registrados en el sistema. Por favor, verifique su información o acceda a su cuenta para continuar con el proceso de solicitud."
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/woodsmoke_600"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:fontFamily="@font/sf_pro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_dialog_bank"
        app:layout_constraintBottom_toTopOf="@id/container_list_bank"/>

    <LinearLayout
        android:id="@+id/container_list_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_dialog_bank">

        <TextView
            android:id="@+id/btn_close_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regresar y validar datos"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:fontFamily="@font/sf_pro_medium"
            android:gravity="end"
            android:textColor="@color/Matisse_700"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/container_text_dialog_bank"/>
        <TextView
            android:id="@+id/btn_submit_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar sesión"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/sf_pro_medium"
            android:gravity="end"
            android:textColor="@color/Matisse_700"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/container_text_dialog_bank"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>