<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/container_layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Matisse_600"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="58dp"
        android:paddingHorizontal="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_toolbar_address_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Ícono"
            android:padding="8dp"
            android:src="@drawable/arrow_left"
            android:clickable="true"
            android:focusable="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/toolbar_layout_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Solicitud de préstamo"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:fontFamily="@font/sf_pro_bold" />
            <TextView
                android:id="@+id/toolbar_layout_address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dirección exacta"
                android:textColor="@android:color/white"
                android:fontFamily="@font/sf_pro"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/toolbar_layout_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Ícono"
            android:padding="8dp"
            android:src="@drawable/ic_exclamation" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>