<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@drawable/card_background"
    android:elevation="4dp">

<ImageView
    android:id="@+id/installmentStatusImage"
    android:layout_width="44dp"
    android:layout_height="44dp"
    android:src="@drawable/ic_pending_detail" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView

            android:id="@+id/installmentStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/woodsmoke_700"
            android:text="Pendiente"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/installmentDueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/woodsmoke_500"
            android:text="DD/MM/YYYY"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="end"
        android:orientation="vertical">
        <TextView
            android:id="@+id/installmentAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textSize="16sp"
            android:textColor="@color/woodsmoke_900"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/installmentCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P-644034"
            android:textSize="12sp"
            android:textColor="@color/woodsmoke_500"/>
    </LinearLayout>




</LinearLayout>