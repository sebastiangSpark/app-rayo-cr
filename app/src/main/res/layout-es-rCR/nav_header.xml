<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="48dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/container_nav_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/close_drawer_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_drawer_arrow"/>

        <ImageView
            android:id="@+id/selectImageViewFlag"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="156dp"
            android:contentDescription="selectedFlag"
            android:src="@drawable/flag_costa_rica_svg"
            />
    </LinearLayout>
    
    <ImageView
        android:layout_width="94dp"
        android:layout_height="35dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/logo_app"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_nav_header"

        />

</androidx.constraintlayout.widget.ConstraintLayout>