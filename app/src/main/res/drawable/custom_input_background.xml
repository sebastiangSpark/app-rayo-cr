<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Cuando el EditText está enfocado -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/pale_sky_50"/>
            <stroke android:width="1dp" android:color="@color/Matisse_200"/>
            <corners android:radius="10dp"/>
            <padding android:left="12dp" android:right="12dp" android:top="16dp" android:bottom="16dp"/>
        </shape>
    </item>

    <!-- Cuando el EditText NO está enfocado -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/pale_sky_50"/>
            <stroke android:width="1dp" android:color="@color/woodsmoke_300"/>
            <corners android:radius="10dp"/>
            <padding android:left="12dp" android:right="12dp" android:top="16dp" android:bottom="16dp"/>
        </shape>
    </item>
</selector>