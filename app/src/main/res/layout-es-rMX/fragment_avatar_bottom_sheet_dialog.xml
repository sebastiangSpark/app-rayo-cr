<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.dialogs.AvatarBottomSheetDialog">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="@drawable/rounded_line"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="24dp"
        android:textSize="12sp"
        android:textColor="@color/woodsmoke_600"
        android:text="Imagen de perfil" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/woodsmoke_200"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="37.5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatar0"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/avatar_00"
            android:layout_marginEnd="20dp"/>

        <ImageView
            android:id="@+id/avatar1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/avatar_01"
            android:layout_marginEnd="20dp"/>

        <ImageView
            android:id="@+id/avatar2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/avatar_02"
            android:layout_marginEnd="20dp"/>

        <ImageView
            android:id="@+id/avatar3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/avatar_03" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="37.5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatar4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/avatar_04"
            android:layout_marginEnd="20dp"/>

        <ImageView
            android:id="@+id/avatar5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/avatar_05"
            android:layout_marginEnd="20dp"/>

        <ImageView
            android:id="@+id/avatar6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/avatar_06"
            android:layout_marginEnd="20dp"/>

        <ImageView
            android:id="@+id/avatar7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/avatar_07" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="37.5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatar8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/avatar_08"
            android:layout_marginEnd="20dp"/>

        <ImageView
            android:id="@+id/avatar9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/avatar_09"
            android:layout_marginEnd="20dp"/>

        <ImageView
            android:id="@+id/avatar10"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/avatar_10"
            android:layout_marginEnd="20dp"/>

        <ImageView
            android:id="@+id/avatar11"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/avatar_11" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="37.5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatar12"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/avatar_12"
            android:layout_marginEnd="20dp"/>

        <ImageView
            android:id="@+id/avatar13"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/avatar_13" />
    </LinearLayout>

</LinearLayout>