<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.loan.LoanDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/backgroundImage"
                android:layout_width="match_parent"
                android:layout_height="204dp"
                android:scaleType="fitXY"
                android:src="@drawable/bg_blue_login"
                app:layout_constraintEnd_toEndOf="@id/container_scrollview"
                app:layout_constraintStart_toStartOf="@id/container_scrollview"
                app:layout_constraintTop_toTopOf="@id/container_scrollview" />

            <LinearLayout
                android:id="@+id/container_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                app:layout_constraintEnd_toEndOf="@id/container_scrollview"
                app:layout_constraintStart_toStartOf="@id/container_scrollview"
                app:layout_constraintTop_toTopOf="@id/container_scrollview" >


            <LinearLayout
                android:id="@+id/title_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textAlignment="center"
                android:layout_marginTop="60dp"
                app:layout_constraintEnd_toEndOf="@id/container_scrollview"
                app:layout_constraintStart_toStartOf="@id/container_scrollview"
                app:layout_constraintTop_toTopOf="@id/container_toolbar">
                <ImageView
                    android:id="@+id/btnBackLoanPersonal"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow_left"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detalle de prÃ©stamo"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="@color/pale_sky_50"
                    android:textStyle="bold"/>
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardLayoutDetail"
                layout="@layout/item_card_detail"
                android:layout_marginTop="24dp" />

            <Button
                android:id="@+id/btnPdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paz y Salvo"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/woodsmoke_200"
                android:textColor="@color/woodsmoke_300"
                android:fontFamily="@font/sf_pro"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/installmentsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>