<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <ScrollView
        android:id="@+id/mainProfileScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Fondo azul con diseño -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/card_background_blue">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="60dp"
                        android:src="@drawable/avatar_00"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />
                </FrameLayout>

                <!-- Nombre del usuario -->
                <ImageView
                    android:id="@+id/edit_image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-4dp"
                    android:layout_marginRight="-26dp"
                    android:contentDescription="editar imagen"
                    android:padding="12dp"
                    android:src="@drawable/edit_profile"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:text="Camila López Martínez"
                    android:textColor="@color/woodsmoke_800"
                    android:textSize="18sp"
                    android:fontFamily="@font/sf_pro_bold" />

                <!-- Subtítulo -->
                <TextView
                    android:id="@+id/friend_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:text="Perfil amigo"
                    android:fontFamily="@font/sf_pro_medium"
                    android:textColor="@color/Matisse_700"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- SECCION INFORMACION PERSONAL -->

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/ProfilePersonalFragment"
                android:name="com.rayo.rayoxml.co.ui.profile.ProfilePersonalFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                tools:layout="@layout/fragment_profile_personal" />

            <!-- SECCION INFORMACION BANCARIA -->

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/ProfileBankFragment"
                android:name="com.rayo.rayoxml.co.ui.profile.ProfileBankFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                tools:layout="@layout/fragment_profile_bank" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/ProfileAddressFragment"
                android:name="com.rayo.rayoxml.CO.ui.profile.ProfileAddressFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="24dp"
                tools:layout="@layout/fragment_profile_address" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>