<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    app:cardBackgroundColor="@color/pale_sky_50"
    app:cardCornerRadius="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dialogs.TumiDialogFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:padding="24dp"
    >
    <ImageView
        android:id="@+id/img_dialog_tumi"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_money_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/title_dialog_tumi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Confirmar desembolso"
        android:textSize="20sp"
        android:fontFamily="@font/sf_pro_bold"
        android:textColor="@color/woodsmoke_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_dialog_tumi"/>
    <TextView
        android:id="@+id/text_dialog_tumi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu dinero será enviado a tu billetera virtual con el siguiente número registrado"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/sf_pro"
        android:textColor="@color/woodsmoke_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_dialog_tumi"/>

    <LinearLayout
        android:id="@+id/container_text_dialog_tumi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa algo"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_dialog_tumi">
        <TextView
            android:id="@+id/text_dialog_tumi_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número: "
            android:textSize="14sp"
            android:fontFamily="@font/sf_pro"
            android:textColor="@color/woodsmoke_700" />
        <TextView
            android:id="@+id/text_dialog_tumi_number_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:fontFamily="@font/sf_pro_bold"
            android:textColor="@color/woodsmoke_700"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_buttons_dialog_tumi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_text_dialog_tumi">
        <TextView
            android:id="@+id/btn_back_tumi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:padding="12dp"
            android:gravity="end"
            android:textColor="@color/Matisse_700"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/container_text_dialog_tumi"/>
        <TextView
            android:id="@+id/btn_submit_tumi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmar"
            android:layout_marginLeft="8dp"
            android:padding="12dp"
            android:gravity="end"
            android:textColor="@color/Matisse_700"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/container_text_dialog_tumi"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>