<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.loan.ProposalConfirmationFragment">

    <ScrollView
        android:id="@+id/scroll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:id="@+id/containerTerms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/filter_border_button"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonTerms"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/pale_sky_50"
                    android:drawableEnd="@drawable/ic_arrow_down"
                    android:drawableTint="@color/woodsmoke_800"
                    android:fontFamily="@font/sf_pro"
                    android:gravity="left"
                    android:padding="12dp"
                    android:text="Términos y Condiciones"
                    android:textAllCaps="false"
                    android:textColor="@color/woodsmoke_900"
                    android:textSize="14sp"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/pale_sky_50" />

                <LinearLayout
                    android:id="@+id/optionsTerms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:visibility="visible"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/border_filter">

                    <ScrollView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true">

                        <LinearLayout
                            android:id="@+id/terms_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Las cláusulas se agregarán dinámicamente aquí -->

                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_acceptance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/filter_border_button"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/containerTerms">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_acceptance"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/pale_sky_50"
                    android:drawableEnd="@drawable/ic_arrow_down"
                    android:drawableTint="@color/woodsmoke_800"
                    android:fontFamily="@font/sf_pro"
                    android:gravity="left"
                    android:padding="12dp"
                    android:text="Formato de aceptación de la fianza y centrales de riesgo"
                    android:textAllCaps="false"
                    android:textColor="@color/woodsmoke_900"
                    android:textSize="14sp"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/pale_sky_50" />

                <LinearLayout
                    android:id="@+id/options_acceptance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:visibility="visible"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/border_filter">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true">

                        <LinearLayout
                            android:id="@+id/acceptance_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Las cláusulas se agregarán dinámicamente aquí -->

                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scroll_container">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkbox_user_terms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro"
                        android:text="Autorizo "
                        android:textColor="@color/woodsmoke_600"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/sf_pro_semibold"
                        android:text="términos y condiciones"
                        android:textColor="@color/Matisse_700"
                        android:textSize="14sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_confirm_send"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:backgroundTint="@color/button_color_state_selector"
                    android:textColor="@color/button_text_color_state_selector"
                    android:fontFamily="@font/sf_pro_medium"
                    android:paddingHorizontal="88dp"
                    android:text="Enviar"
                    android:enabled="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>