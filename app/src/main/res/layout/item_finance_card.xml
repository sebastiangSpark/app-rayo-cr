<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="326dp"
        android:layout_height="200dp"
        android:layout_marginEnd="16dp"
        android:background="@color/pale_sky_50"
        app:cardCornerRadius="20dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/card_finance_text"
                android:layout_width="186dp"
                android:layout_height="match_parent"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/title_financial_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sf_pro_bold"
                    android:text="¿Qué son Mini Préstamos a empleados?"
                    android:textColor="@color/woodsmoke_800"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/description_financial_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/sf_pro"
                    android:maxLines="4"
                    android:text="Como empleado, en ciertas ocasiones el salario no alcanza a llegar a fin de mes, ya sea por alguna emergencia, o u..."
                    android:textColor="@color/pale_sky_500"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="9dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_medium"
                        android:text="Leer más"
                        android:textColor="@color/Matisse_700"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/arrow_right"
                        app:tint="@color/Matisse_700" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/card_financial_image_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/loan_employed_pic" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
