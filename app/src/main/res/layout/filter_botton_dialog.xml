<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet_dialog"

    tools:context=".ui.dialogs.FilterBottomSheetDialog">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:textSize="12sp"
        android:textColor="@color/woodsmoke_600"
        android:text="Filtros" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/woodsmoke_200"
        />

    <!-- Filtro 1 -->
    <LinearLayout
        android:id="@+id/containerFiltro1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/filter_border_button"
        >

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonFiltro1"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/pale_sky_50"
        android:drawableEnd="@drawable/ic_arrow_down"
        android:drawableTint="@color/woodsmoke_800"
        android:gravity="left"
        android:padding="12dp"
        android:text="Tipo de préstamo"
        android:textAllCaps="false"
        android:textColor="@color/woodsmoke_800"
        android:textSize="14sp"
        app:cornerRadius="12dp"
        app:strokeColor="@color/pale_sky_50" />

    <LinearLayout
        android:id="@+id/optionsFiltro1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:visibility="visible"
        app:cornerRadius="12dp"
        app:strokeColor="@color/border_filter">

        <CheckBox
            android:id="@+id/checkFiltro1_op1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Préstamo mini"
            android:textSize="14sp"
            android:textColor="@color/woodsmoke_900"/>

        <CheckBox
            android:id="@+id/checkFiltro1_op2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Préstamo Rayo Plus"
            android:textSize="14sp"
            android:textColor="@color/woodsmoke_900"/>

        <CheckBox
            android:id="@+id/checkFiltro1_op3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Préstamo Largo Plazo (PLP)"
            android:textSize="14sp"
            android:textColor="@color/woodsmoke_900"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Filtro 2 -->
    <LinearLayout
        android:id="@+id/containerFiltro2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/filter_border_button"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        >
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonFiltro2"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/pale_sky_50"
        android:drawableEnd="@drawable/ic_arrow_down"
        android:drawableTint="@color/woodsmoke_800"
        android:gravity="left"
        android:padding="12dp"
        android:text="Estado"
        android:textAllCaps="false"
        android:textColor="@color/woodsmoke_800"
        android:textSize="14sp"
        app:cornerRadius="12dp"
        app:strokeColor="@color/pale_sky_50" />

    <LinearLayout
        android:id="@+id/optionsFiltro2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:visibility="visible">

        <CheckBox
            android:id="@+id/checkFiltro2_op1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pendiente"
            android:textSize="14sp"
            android:textColor="@color/woodsmoke_900"/>

        <CheckBox
            android:id="@+id/checkFiltro2_op2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelado"
            android:textSize="14sp"
            android:textColor="@color/woodsmoke_900"/>

        <CheckBox
            android:id="@+id/checkFiltro2_op3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="En mora"
            android:textSize="14sp"
            android:textColor="@color/woodsmoke_900"/>

        <CheckBox
            android:id="@+id/checkFiltro2_op4"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="En revisión"
            android:textSize="14sp"
            android:textColor="@color/woodsmoke_900"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/filterButtonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:gravity="end"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonApplyFilters"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Matisse_700"
            app:cornerRadius="50dp"
            android:textColor="@color/pale_sky_50"
            android:textSize="14sp"
            android:layout_weight="1"
            android:text="Aplicar"
            android:layout_marginHorizontal="16dp"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonClearFilters"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_weight="1"
            android:text="Limpiar"
            android:textAllCaps="false"
            android:textColor="@color/Matisse_700"
            android:textSize="14sp"
            app:cornerRadius="50dp"
            app:strokeColor="@color/Matisse_700" />
    </LinearLayout>

</LinearLayout>