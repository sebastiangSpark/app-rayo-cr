<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CO.ui.info.BenefitScreen.FriendFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="102dp"
        android:scrollbars="none"
        >
        <LinearLayout
            android:id="@+id/options_acceptance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="visible"
            app:cornerRadius="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_bold"
                android:textAlignment="center"
                android:text="Amigo"
                android:layout_marginTop="16dp"
                android:textColor="@color/Matisse_900"
                android:textSize="16sp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="166dp"
                android:layout_marginHorizontal="54dp"
                android:layout_marginVertical="24dp"
                android:src="@drawable/img_perfil_amigo"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_bold"
                android:text="¿Qué es un Amigo? ¿Qué beneficios tiene?"
                android:layout_marginTop="16dp"
                android:textColor="@color/woodsmoke_900"
                android:textSize="14sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro"
                android:layout_marginTop="16dp"
                android:text="En general, un amigo que presta dinero es alguien en quien confías lo suficiente como para pedirle ayuda financiera y que está dispuesto a proporcionarte ese apoyo en momentos de necesidad."
                android:textColor="@color/woodsmoke_900"
                android:textSize="14sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro"
                android:layout_marginTop="16dp"
                android:text="Sin embargo, es importante tener en cuenta que prestar dinero entre amigos puede complicar las relaciones si no se maneja adecuadamente. A veces, los préstamos de dinero pueden generar tensiones o malentendidos si no se establecen claramente los términos del préstamo y si no se cumple con los plazos acordados para la devolución."
                android:textColor="@color/woodsmoke_900"
                android:textSize="14sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro"
                android:layout_marginTop="16dp"
                android:text="Por ser parte de la familia RAYO y tener de 1 a 3 préstamos con nosotros, puedes tener los siguiente beneficios:"
                android:textColor="@color/woodsmoke_900"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sf_pro"
                android:text="• Descuentos del 10 al 12% a partir del 2 o 3 préstamo"
                android:textColor="@color/woodsmoke_900"
                android:textSize="14sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sf_pro"
                android:text="• Aumento de cupo"
                android:textColor="@color/woodsmoke_900"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_bold"
                android:text="Importante pagar a tiempo para recibir estos benéficos. Aplican TyC"
                android:layout_marginTop="16dp"
                android:textColor="@color/woodsmoke_900"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>