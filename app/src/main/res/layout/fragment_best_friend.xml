<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CO.ui.info.BenefitScreen.BestFriendFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="102dp"
        android:scrollbars="none"
        >
        <LinearLayout
            android:id="@+id/options_acceptance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="visible"
            app:cornerRadius="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_bold"
                android:textAlignment="center"
                android:text="Mejor Amigo"
                android:layout_marginTop="16dp"
                android:textColor="@color/Matisse_900"
                android:textSize="16sp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="166dp"
                android:layout_marginHorizontal="54dp"
                android:layout_marginVertical="24dp"
                android:src="@drawable/img_perfil_mejor_amigo"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_bold"
                android:text="¿Qué es un Mejor Amigo? ¿Qué beneficios tiene?"
                android:layout_marginTop="16dp"
                android:textColor="@color/woodsmoke_900"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sf_pro"
                android:text="El Mejor Amigo está en todas las situaciones de la vida, hasta te presta dinero. Es alguien en quien confías lo suficiente como para pedirle ayuda financiera y que está dispuesto a proporcionarte ese apoyo en momentos de necesidad o calamidad."
                android:textColor="@color/woodsmoke_900"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro"
                android:layout_marginTop="16dp"
                android:text="Es importante destacar que la confianza y la transparencia son fundamentales con los mejores amigos en este tipo de relaciones. Ambas partes deben establecer claramente los términos del préstamo, incluyendo la cantidad prestada, el plazo de devolución y cualquier acuerdo sobre intereses u otras condiciones. Además, es crucial cumplir con lo acordado y mantener una comunicación abierta y honesta para preservar la amistad y la confianza mutua."
                android:textColor="@color/woodsmoke_900"
                android:textSize="14sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro"
                android:layout_marginTop="16dp"
                android:text="Por ser parte de la familia RAYO y tener 9 a 12 préstamos con nosotros, puedes tener:"
                android:textColor="@color/woodsmoke_900"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sf_pro"
                android:text="• De un 8% a un 20% de descuento en tus próximos préstamos"
                android:textColor="@color/woodsmoke_900"
                android:textSize="14sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sf_pro"
                android:text="• Aumento de cupo en tus productos"
                android:textColor="@color/woodsmoke_900"
                android:textSize="14sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sf_pro"
                android:text="• Tener habilitado un producto con más cupo como lo es el Rayo PLUS"
                android:textColor="@color/woodsmoke_900"
                android:textSize="14sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sf_pro"
                android:text="• Tener habilitado un nuevo producto con más cupo: PLP (Préstamo Largo Plazo)"
                android:textColor="@color/woodsmoke_900"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_bold"
                android:text="Importante pagar a tiempo para recibir estos benéficos. Aplican TyC"
                android:layout_marginTop="16dp"
                android:textColor="@color/woodsmoke_900"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>