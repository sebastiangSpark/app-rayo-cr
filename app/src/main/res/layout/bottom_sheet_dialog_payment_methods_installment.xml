<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_pay_installment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:text="Medios de pago"
        android:textColor="@color/woodsmoke_600"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        app:dividerColor="@color/woodsmoke_300"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_pay_installment" />

    <RadioGroup
        android:id="@+id/radioGroupPaymentMethods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp">

        <!-- Opción 1: Tarjeta de crédito -->
        <LinearLayout
            android:id="@+id/linearLayoutCreditCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:paddingHorizontal="24dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iconCreditCard"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_pse"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/textCreditCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pagos Seguros en Linea"
                android:textSize="14sp"
                android:fontFamily="@font/sf_pro"
                android:textColor="@color/woodsmoke_900" />

            <RadioButton
                android:id="@+id/radioCreditCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="false"/>
        </LinearLayout>

        <!-- Opción 2: Transferencia bancaria -->
        <LinearLayout
            android:id="@+id/linearLayoutBankTransfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:paddingHorizontal="24dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iconBankTransfer"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_bancolombia_logo"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/textBankTransfer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Botón Bancolombia"
                android:textSize="14sp"
                android:fontFamily="@font/sf_pro"
                android:textColor="@color/woodsmoke_900" />

            <RadioButton
                android:id="@+id/radioBankTransfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="false"/>
        </LinearLayout>
    </RadioGroup>
    <!-- Botón de Pagar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/radioGroupPaymentMethods"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    <Button
        android:id="@+id/buttonPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pagar"
        android:backgroundTint="@color/Matisse_700"
        android:textColor="@color/pale_sky_50"
        app:layout_constraintTop_toBottomOf="@id/radioGroupPaymentMethods"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón de Cancelar -->
    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:strokeColor="@color/Matisse_700"
        android:textColor="@color/Matisse_700"
        android:backgroundTint="@color/pale_sky_50"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/buttonPay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>