<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardLoanActive"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    android:elevation="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/card_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginBottom="6dp">

        <LinearLayout
            android:id="@+id/container_header_card_loan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/cardTitle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="PrÃ©stamo mini"
                android:layout_weight="1"
                android:textColor="@color/Matisse_600"
                android:textStyle="bold"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/txtLoanStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/web_orange_50"
                android:textColor="@color/web_orange_600"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:text="pendiente"
                android:paddingHorizontal="11dp"
                android:paddingVertical="6dp"/>

        </LinearLayout>

            <LinearLayout
                android:id="@+id/container_card_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/container_header_card_loan">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Monto"
                    android:textSize="12sp"
                    android:textColor="@color/pale_sky_500"/>
                <TextView
                    android:id="@+id/txtLoanAmount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="$340,000.00"
                    android:textSize="20sp"
                    android:textColor="@color/woodsmoke_900"
                    android:textStyle="bold"/>
            </LinearLayout>

        <View
            android:id="@+id/divider_card_loan"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/woodsmoke_200"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/container_card_amount"
            />

        <LinearLayout
            android:id="@+id/container_pay_card_loan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_card_loan">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:src="@drawable/ic_count_fees" />
                <TextView
                    android:id="@+id/cardPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Cantidad de cuotas: "
                    android:textSize="12sp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/woodsmoke_500"/>

                <TextView
                    android:id="@+id/txtLoanNumberPayments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/woodsmoke_500"
                    android:textSize="12sp"
                    android:text="3"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:src="@drawable/ic_date_picker" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Fecha desembolso: "
                    android:textSize="12sp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/woodsmoke_500"
                    />
                <TextView
                    android:id="@+id/txtLoanDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Diciembre 15, 2024"
                    android:textSize="12sp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/woodsmoke_500"
                    />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>