<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="@drawable/rounded_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/title_type_account_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actividad econÃ³mica"
        android:textColor="@color/woodsmoke_600"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:dividerColor="@color/woodsmoke_300"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_type_account_dialog"/>

    <EditText
        android:id="@+id/searchEconomyActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_weight="1"
        android:background="@drawable/bg_edit_text"
        android:hint="Buscar"
        android:inputType="text"
        android:textSize="14sp"
        android:fontFamily="@font/sf_pro_medium"
        android:textColorHint="@color/woodsmoke_300"
        android:drawableEnd="@drawable/ic_search"
        android:paddingHorizontal="12dp"
        android:paddingVertical="16dp"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewEconomyActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchEconomyActivity"/>
</androidx.constraintlayout.widget.ConstraintLayout>