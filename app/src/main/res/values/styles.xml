<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TransparentDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CustomButtonStyle">
        <item name="android:background">@drawable/button_border_viewpager</item>
        <item name="android:textColor">@color/Matisse_700</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomNavigationView" parent="Widget.Design.NavigationView">
        <item name="android:background">@color/monza_200</item>
    </style>
    <style name="FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/pale_sky_50</item>
    </style>
    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemBackground">@android:color/transparent</item> <!-- Fondo transparente -->
        <item name="itemRippleColor">@android:color/transparent</item> <!-- Ripple transparente -->
        <item name="itemHorizontalTranslationEnabled">false</item> <!-- Desactiva la animaci贸n de desplazamiento -->
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textSize">10sp</item>
        <item name="iconSize">24dp</item>
        <item name="android:fontFamily">@font/sf_pro</item>
    </style>
    <style name="CustomListStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">textStart</item>

        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:drawablePadding">8dp</item>
        <!--<item name="android:textAppearance">@style/CustomTextAppearance</item>-->
        <item name="android:drawableStart">@drawable/ic_check_list</item>

    </style>
    <style name="RadioButtonRight" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layoutDirection">ltr</item> <!-- Fuerza direcci贸n izquierda-derecha -->
        <item name="android:gravity">start|center_vertical</item> <!-- Alinea texto a la izquierda -->
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:button">@null</item> <!-- Elimina el bot贸n por defecto -->
        <item name="android:drawableRight">?android:attr/listChoiceIndicatorSingle</item> <!-- Coloca el bot贸n a la derecha -->
    </style>
    <style name="CustomScrollView">
        <item name="android:scrollbarThumbVertical">@drawable/ic_scroll_thumb</item>
    </style>

    <style name="Theme.MyApp.DatePicker" parent="ThemeOverlay.Material3.MaterialCalendar">
        <!-- Solo personaliza colores -->
        <item name="colorPrimary">@color/Matisse_700</item>
        <item name="colorOnPrimary">@color/pale_sky_50</item>
        <item name="colorPrimaryContainer">@color/Matisse_700</item>
        <item name="colorOnPrimaryContainer">@color/pale_sky_50</item>
    </style>
</resources>